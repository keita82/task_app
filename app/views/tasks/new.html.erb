<div class="main_container">
    <div class="information">
        <h2>スケジュール新規作成</h2>
    </div>
    <%= form_with model: @task do |f| %>
    <table>
        <tbody>
            <tr>
                <th><%= f.label :title, "タイトル" %></th>
                <th><%= f.text_field :title %></th>
            </tr>
            <tr>
                <th><%= f.label :start_date, "開始日" %></th>
                <th><%= f.date_field :start_date %></th>
            </tr>
            <tr>
                <th><%= f.label :end_date, "終了日" %></th>
                <th><%= f.date_field :end_date %></th>
            </tr>
            <tr>
                <th><%= f.label :all_day, "終日" %></th>
                <th><%= f.check_box :all_day %><br>終日の場合はチェックを入れます</th>
            </tr>
            <tr>
                <th><%= f.label :memo, "スケジュールメモ" %></th>
                <th><%= f.text_area :memo, class: "posts-content" %></th>
            </tr>
        </tbody>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュールを新規登録する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
    <% end %>
</div>
<footer>
    <h1>
        現在の日時：<%= "#{@time.year}年 #{@time.month}月#{@time.day}日" %>
    </h1>
</footer>
